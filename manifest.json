{
  "manifest_version": 3,
  "name": "FocusUp",
  "version": "1.0",
  "description": "This is a Chrome extension for blocking distracting sites.",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "./src/background.js",
    "persistent": false
  },
  "action": {
    "default_popup": "./src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/contentScripts.js"]
    }
  ]
}
